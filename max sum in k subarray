#include<bits/stdc++.h>
using namespace std;

#define ll long long int

///the first function is the brute force of the sliding 
//window technique

///in the main function i implement the better approach  for
///the sliding window

int sliding_window(int a[],int k,int n)
{
    int maxi=0;

    for(int i=0;i<n;i++)
    {
        int sum=0;
        for(int j=i;j<i+k;j++)
        {
            sum+=a[j];
        }
        maxi=max(sum,maxi);
    }

    return maxi;
}

int main()
{
    int a[100];

    int n;
    cin>>n;

    int k;
    cin>>k;

    int res=sliding_window(a,k,n);

    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    int max_sum=0;

    for(int i=0;i<k;i++)
    {
        max_sum+=a[i];
    }
    int window_sum=max_sum;

    for(int i=k;i<n;i++)
    {
        window_sum+=a[i]-a[i-k];
        max_sum=max(max_sum,window_sum);
    }

   cout<<max_sum<<endl;
   //cout<<window_sum<<endl;
    
}
